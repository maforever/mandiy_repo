            android:name=".ui.WelcomeActivity"
            android:label="@string/app_name" 
            android:theme="@android:style/Theme.Black.NoTitleBar.Fullscreen">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.IndexActivity" android:theme="@android:style/Theme.Black.NoTitleBar"></activity>
         <activity android:name=".ui.IndexMenuActivity" android:theme="@android:style/Theme.Black.NoTitleBar"></activity>

<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent"
  xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:id="@id/bottom" android:background="@drawable/btn_edit_bg" android:layout_width="fill_parent" android:layout_height="@dimen/action_bar_height" android:layout_alignParentBottom="true">
        <ImageView android:id="@id/back" android:layout_width="wrap_content" android:layout_height="wrap_content" android:src="@drawable/btn_gray_back" android:onClick="btnClick"/>
    </RelativeLayout>
    <RelativeLayout android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_above="@id/bottom">
        <LinearLayout android:gravity="center_vertical" android:layout_gravity="center_vertical" android:id="@id/top" android:background="@color/white" android:layout_width="fill_parent" android:layout_height="@dimen/logo_title_height">
            <ImageView android:layout_width="wrap_content" android:layout_height="wrap_content" android:layout_marginLeft="20.0dip" android:src="@drawable/logo_title_login" />
        </LinearLayout>
        <LinearLayout android:orientation="vertical" android:background="#fff5f5f5" android:padding="20.0dip" android:layout_width="fill_parent" android:layout_height="fill_parent" android:layout_below="@id/top">
            <TextView android:textColor="#ff000000" android:layout_gravity="center" android:layout_width="wrap_content" android:layout_height="wrap_content" android:text="登录印吧，免费得印豆，下单支付时可用" />
            <ImageView android:id="@id/login_sina" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5.0dip" android:src="@drawable/btn_logo_sina" />
            <ImageView android:id="@id/login_qqweibo" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5.0dip" android:src="@drawable/btn_logo_qqweibo" />
            <ImageView android:id="@id/login_qq" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5.0dip" android:src="@drawable/btn_logo_qq" />
            <ImageView android:id="@id/login_anonymous" android:visibility="gone" android:layout_width="fill_parent" android:layout_height="wrap_content" android:layout_marginTop="5.0dip" android:src="@drawable/btn_login_anonymous" />
        </LinearLayout>
    </RelativeLayout>
</RelativeLayout>